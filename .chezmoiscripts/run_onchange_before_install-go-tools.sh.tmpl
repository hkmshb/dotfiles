#!/bin/bash

set -eufo pipefail

{{- $apps := list
    "a-h/templ/cmd/templ@latest"
    "~golang.org/x/tools/cmd/godoc@latest"
    "~golang.org/x/tools/cmd/goimports@latest"
    "~golang.org/x/pkgsite/cmd/pkgsite@latest"
-}}

{{ range $apps -}}
  {{- if not (hasPrefix "~" .) }}
go install "github.com/{{.}}"
  {{- else }}
go install "{{ trimPrefix "~" . }}"
  {{- end -}}
{{ end }}
