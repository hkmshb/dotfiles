#!/bin/bash

set -eufo pipefail

{{- $apps := list
    "air-verse/air@latest"
    "evilmartians/lefthook@latest"
    "golangci/golangci-lint/cmd/golangci-lint@latest"
    "~golang.org/x/tools/cmd/godoc@latest"
    -}}

{{ range $apps -}}
  {{ if not (hasPrefix "~" .) }}
go install "github.com/{{.}}"
  {{ else }}
go install "{{ trimPrefix "~" . }}"
  {{ end }}
{{ end }}
