#!/bin/bash

set -eufo pipefail

{{- $brews := list
    "act"
    "bash"
    "croc"
    "docker-compose"
    "git"
    "highlight"
    "httpie"
    "k3d"
    "lastpass-cli"
    "mise"
    "nvim"
    "openjdk"
    "umlet"
    "yarn"
    "youtubedr" }}

{{- $casks := list
    "bruno"
    "docker"
    "flux"
    "hammerspoon"
    "http-toolkit"
    "iterm2"
    "megasync"
    "ngrok"
    "slack"
    "sqlitestudio"
    "zulu@17" -}}

{{- $large_casks := list
    "android-studio"
    "pgadmin4"
    "microsoft-edge"
    "qgis"
    "vagrant"
    "vlc"
    "zoom" -}}

{{ if eq .chezmoi.arch "amd64" }}
{{   $casks = concat $casks (list
        "virtualbox") }}
{{ end }}


# install ...
brew bundle -v --no-lock --file=/dev/stdin <<EOF
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end }}

{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF

