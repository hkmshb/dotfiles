#!/bin/bash

set -eufo pipefail

{{- $brews := list
    "bash"
    "caddy"
    "cgit"
    "croc"
    "direnv"
    "docker-compose"
    "gitea"
    "goenv"
    "go-task"
    "highlight"
    "jq"
    "lastpass-cli"
    "micro"
    "n"
    "nvim"
    "pnpm"
    "pre-commit"
    "pyenv"
    "pyenv-virtualenv"
    "rbenv"
    "sqlite"
    "syncthing"
    "umlet"
    "yarn"
    "youtubedr" }}

{{- $casks := list
    "android-studio"
    "docker"
    "flux"
    "http-toolkit"
    "iterm2"
    "lapce"
    "libreoffice"
    "megasync"
    "microsoft-edge"
    "postman"
    "slack"
    "vagrant"
    "visual-studio-code"
    "vlc"
    "wireshark"
    "zoom"
    "zulu11" -}}

{{ if eq .chezmoi.arch "amd64" }}
{{   $casks = concat $casks (list
        "virtualbox") }}
{{ end }}

# add taps
brew tap homebrew/cask-fonts                                # for nerd-fonts
brew tap homebrew/cask-versions                             # for zulu
brew tap gitea/tap https://gitea.com/gitea/homebrew-gitea   # for gitea

# install ...
brew bundle -v --no-lock --file=/dev/stdin <<EOF
{{ range ($brews | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end }}

{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF
